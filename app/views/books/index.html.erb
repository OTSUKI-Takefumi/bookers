<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<% @books.each do |book| %>
  <tbody>
    <tr></tr>

      <td class="list">
        <%= book.title %>
      </td>

      <td class="list">
        <%= book.body %>
      </td>

      <td><%= link_to "Show", book_path(book.id) %></td>
      <td><%= link_to "Edit", edit_book_path(book.id) %></td>
      <td><%= link_to "Destroy", book_path(book.id), method: :delete %></td>
    </tr>
  </tbody>
 <% end %>
</table>

