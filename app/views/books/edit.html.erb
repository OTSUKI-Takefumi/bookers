<h1>Editing Book</h1>

<!--バリデーション-->
<% if @book.errors.any? %>
  <%= @book.errors.count %>error ※please fill in the blanks
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book,url: book_path(@book.id), method: :patch do |f| %>

  <div class="field">
    <h3>Title</h3>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <h3>Body</h3>
    <%= f.text_area :body %>
  </div>

  <div class="field">
    <%= f.submit 'Update Book' %>
  </div>
  <% end %>


  <span><%= link_to "Show", book_path(@book.id) %></span>
  <span><%= link_to "Back", books_path %></span>